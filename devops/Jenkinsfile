pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/your-username/devops.git'
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t myapp:latest .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials']) {
                    bat 'docker tag myapp:latest your-dockerhub-username/myapp:latest'
                    bat 'docker push your-dockerhub-username/myapp:latest'
                }
            }
        }

        stage('Deploy') {
            steps {
                bat 'docker run -d -p 8080:8080 your-dockerhub-username/myapp:latest'
            }
        }
    }
}
